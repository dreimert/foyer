md-table-container
  table(md-table md-progress="deferred")
    thead(md-head md-order="query.order" md-trigger="onOrderChange")
      tr(md-row)
        th(md-column) Date
        th(md-column) Utilisateur
        th(md-column) Consommation
        th(md-column md-numeric) Nombre
    tbody(md-body)
      tr(md-row md-auto-select ng-repeat="consommation in consommations track by $index")
        td(md-cell) {{consommation.date | amDateFormat:'DD/MM/YYYY HH:mm:ss'}}
        td(md-cell) {{consommation.user ||Â "Anonyme"}}
        td(md-cell) {{consommation.consommable}}
        td(md-cell) {{consommation.quantity}}

md-table-pagination(md-label="label" md-options="['10', '25', '50']" md-limit="query.limit" md-page="query.page" md-total="{{total}}" md-on-paginate="onPaginationChange")
