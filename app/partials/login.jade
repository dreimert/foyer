md-content(layout="column", layout-fill, layout-align="center center" ng-class="lieu" md-theme="{{ lieu }}")
  div
    md-card.nopadding(layout-padding)
      md-input-container
        md-select.nopadding(placeholder="Lieu", ng-model="lieu", required)
          md-option(ng-repeat="lieu in lieux", value="{{lieu.value}}") {{lieu.name}}
          
    md-card.nopadding(layout-padding)
      form(name="loginForm", ng-submit="onFormSubmit()", novalidate="" layout="column")
        md-input-container
          label Login
          input(ng-model="login", maxlength="15", name="login", required)
        md-input-container
          label Mot de passe
          input(ng-model="password", type="password", maxlength="255", name="password", required)
        md-button.nomarginright.nomarginleft.md-raised.md-primary(type="submit", ng-disabled="loginForm.$invalid") Connexion

    div(layout="row" layout-align="center center")
      md-button.md-button.md-raised.md-primary(flex, ui-sref="anonyme.accueil({lieu: lieu})") Anonyme
